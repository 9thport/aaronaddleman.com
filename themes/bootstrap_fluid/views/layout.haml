!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title Bootstrap, from Twitter
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %meta{:content => "", :name => "description"}
      %meta{:content => "", :name => "author"}
      / Le styles
      %link{:href => "/bootstrap_fluid/assets/css/bootstrap.css", :rel => "stylesheet"}
      :css
        body {
          padding-top: 60px;
          padding-bottom: 40px;
        }
        .sidebar-nav {
          padding: 9px 0;
        }
        %link{:href => "/bootstrap_fluid/assets/css/bootstrap-responsive.css", :rel => "stylesheet"}
        / Le HTML5 shim, for IE6-8 support of HTML5 elements
        /[if lt IE 9]
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        / Le fav and touch icons
        %link{:href => "/bootstrap_fluid/assets/ico/favicon.ico", :rel => "shortcut icon"}
        %link{:href => "/bootstrap_fluid/assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}
        %link{:href => "/bootstrap_fluid/assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
        %link{:href => "/bootstrap_fluid/assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
        %link{:href => "/bootstrap_fluid/assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}
            = @heading
          .nav-collapse
            - display_menu(@menu_items, :class => "nav")
            / %ul.nav
            /   %li.active
            /     %a{:href => "#"} Home
            /   %li
            /     %a{:href => "#about"} About
            /   %li
            /     %a{:href => "#contact"} Contact
          / /.nav-collapse
    .container-fluid
      = yield
    / /.fluid-container
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    %script{:src => "/bootstrap_fluid/assets/js/bootstrap.js"}
    / %script{:src => "/assets/js/jquery.js"}
    / %script{:src => "/assets/js/bootstrap-transition.js"}
    / %script{:src => "/assets/js/bootstrap-alert.js"}
    / %script{:src => "/assets/js/bootstrap-modal.js"}
    / %script{:src => "/assets/js/bootstrap-dropdown.js"}
    / %script{:src => "/assets/js/bootstrap-scrollspy.js"}
    / %script{:src => "/assets/js/bootstrap-tab.js"}
    / %script{:src => "/assets/js/bootstrap-tooltip.js"}
    / %script{:src => "/assets/js/bootstrap-popover.js"}
    / %script{:src => "/assets/js/bootstrap-button.js"}
    / %script{:src => "/assets/js/bootstrap-collapse.js"}
    / %script{:src => "/assets/js/bootstrap-carousel.js"}
    / %script{:src => "/assets/js/bootstrap-typeahead.js"}